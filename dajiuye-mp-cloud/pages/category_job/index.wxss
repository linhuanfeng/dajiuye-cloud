page {
  height: 100%;
  background-color: #fff;
  font-size: 27rpx;
  letter-spacing: 2rpx;
  font-family: MicroSoft yahei;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh-90rpx);
  height: 100%;
  display: flex;
  white-space: nowrap;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .topnav {
  position: fixed;
  top: 85rpx;
  z-index: 99;
  background: #fff;
  width: 100%;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(223, 222, 222, 0.4);
  padding: 50rpx 5rpx;
  border-left: 9rpx #2f79e900 solid;
}
.cates .cates_container .left_menu .lf_last {
  padding-bottom: 200rpx;
}
.cates .cates_container .left_menu .active {
  border-left: 9rpx #2f79e9ff solid;
}
.cates .cates_container .right_contents {
  flex: 5;
  padding: 0 30rpx 140rpx 30rpx;
}
.cates .cates_container .right_contents .goods_group .goods_title {
  text-align: center;
  padding: 15rpx;
}
.cates .cates_container .right_contents .goods_group .second {
  margin-top: 30rpx;
}
.cates .cates_container .right_contents .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_contents .goods_group .goods_list navigator {
  width: 47%;
  margin: 6rpx;
  padding: 17rpx 0rpx;
  border: 1rpx #fff solid;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background-color: rgba(223, 222, 222, 0.4);
}
