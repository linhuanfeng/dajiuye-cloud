page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .orders_wrap {
  z-index: 999;
  width: 100%;
  background-color: #e9deee;
  position: fixed;
}
.cates .orders_wrap .orders_title {
  margin-top: 30rpx;
  background-color: #ec9b9b;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.cates .orders_wrap .order_content {
  background-color: #49df2b;
  display: flex;
}
.cates .orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.cates .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.cates .cates_container {
  height: calc(100vh-90rpx);
  height: 100%;
  display: flex;
  white-space: nowrap;
}
.cates .cates_container .menu .menu_item {
  height: 380rpx;
  background-color: #edece9;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-top: 5rpx;
}
.cates .cates_container .menu .menu_item .menu_item_wrap {
  width: 700rpx;
  height: 350rpx;
  background-color: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_body {
  flex: 6;
  background-color: #054e4b;
  position: relative;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_body .img_wrap {
  background-color: #dfe94e;
  width: 100%;
  height: 270rpx;
  overflow: hidden;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_body .img_wrap .img {
  background-color: #37dd6f;
  width: 100%;
  height: 100%;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_body .img_wrap .img image {
  width: 100%;
  height: 100%;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_body .cover_wrap {
  position: absolute;
  padding: 9rpx 20rpx;
  margin-top: -10rpx;
  width: 100%;
  height: 120rpx;
  background-color: white;
}
.cates .cates_container .menu .menu_item .menu_item_wrap .wrap_foot {
  flex: 3;
}
