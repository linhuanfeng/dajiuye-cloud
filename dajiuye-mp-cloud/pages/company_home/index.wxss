page {
  padding: 10rpx 10rpx 90rpx 10rpx;
  background-color: #fff;
  font-family: MicroSoft yahei;
}
.com_wrap {
  margin: 17rpx 0;
  padding: 20rpx 10rpx;
  border-bottom: 5rpx solid #f3efef;
  border-top: 5rpx solid #f3efef;
}
.com_wrap .com {
  flex: 1;
  display: flex;
  justify-content: space-around;
}
.com_wrap .com .content_btm_lft {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.com_wrap .com .content_btm_lft image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 40rpx;
}
.com_wrap .com .content_btm_rgt {
  flex: 7;
  display: flex;
  flex-direction: column;
}
.com_wrap .com .content_btm_rgt .cbr_top {
  flex: 1;
  font-size: 44rpx;
  font-weight: 540;
  color: #161616;
}
.com_wrap .com .content_btm_rgt .cbr_btm {
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.com_wrap .com .content_btm_rgt .cbr_btm .cbr_btm_lft {
  display: flex;
  justify-content: start;
  font-size: 29rpx;
  font-weight: 400;
  color: #161616;
  padding-top: 10rpx;
}
.com_wrap .com .content_btm_rgt .cbr_btm .cbr_btm_lft text {
  display: inline-block;
  justify-content: center;
  align-items: center;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  padding: 20rpx;
}
.content {
  padding: 20rpx;
}
.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  padding: 10rpx;
}
.btm_tool .tool_item {
  flex: 1px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btn_buy {
  flex: 4;
  background-color: var(--themeColor);
  border: 1rpx var(--themeColor) solid;
  border-radius: 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool #isSubmit {
  color: var(--themeColor);
  background-color: #fff;
}
